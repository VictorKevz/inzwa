{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && npx firebase emulators:start --only functions",
    "shell": "npm run build && npx firebase functions:shell",
    "start": "npm run shell",
    "deploy": "npm run build && npx firebase deploy --only functions",
    "logs": "npx firebase functions:log",
    "import:products": "ts-node src/scripts/importProducts.ts"
  },
  "engines": {
    "node": "24"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/vertexai": "^1.10.0",
    "dotenv": "^17.2.3",
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^7.0.0"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.2",
    "firebase-functions-test": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "private": true
}